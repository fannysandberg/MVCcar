@model CarsCreateVMcs
@{
    ViewBag.Title = "Create new Car";
    ViewBag.UnderTitle = "Create new Car";
}
<form asp-controller="Cars" asp-action="Create" method="post">
    <label asp-for="Brand"></label><br />
    <input asp-for="Brand" />
    <span asp-validation-for="Brand"></span><br /><br />
    <label asp-for="Doors"></label><br />
    <input asp-for="Doors" />
    <span asp-validation-for="Doors"></span><br /><br/>
    <label asp-for="TopSpeed"></label><br/>
    <input asp-for="TopSpeed" />
    <span asp-validation-for="TopSpeed"></span><br />
    <input type="submit" value="Add new car" /><br />
</form>
